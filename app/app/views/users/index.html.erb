<% provide(:title, 'All users') %>

<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
       | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
       | <%= form_for(user.purchases.build(user_id: user.id)) do |f| %>
			   <%= f.hidden_field :user_id %>
			   <%= f.label :price , class: "span1"%>
	    	<%= f.number_field :original_price , class: "span4"%>
		  	<%= f.submit "Purchase", class: "btn btn-small btn-primary" %>
	   	 <% end %>                                                  
    </li>
  <% end %>
</ul>